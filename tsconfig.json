{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM"],
    "rootDir": "."
  },
  "include": ["src/**/*.*", "transformations/**/*.*", "bin/**/*.*"],
  "exclude": ["dist", "playground", "node_modules"]
}
